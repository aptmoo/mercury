# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  shared_config = debug

else ifeq ($(config),release)
  shared_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := shared

.PHONY: all clean help $(PROJECTS) CoreEngine

all: $(PROJECTS)

CoreEngine: shared

shared:
ifneq (,$(shared_config))
	@echo "==== Building shared ($(shared_config)) ===="
	@${MAKE} --no-print-directory -C . -f shared.make config=$(shared_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f shared.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   shared"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"